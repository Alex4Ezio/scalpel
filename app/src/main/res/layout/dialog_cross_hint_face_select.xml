<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outline_background_card_smoother"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:id="@+id/top"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/left"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/top"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/front"
        android:layout_toRightOf="@id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/top"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/down"
        android:layout_toRightOf="@+id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/front"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/right"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/top"
        android:layout_toRightOf="@id/front"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/right"
        android:layout_below="@id/top"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <ImageView
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/down"
        android:layout_alignRight="@id/back"
        android:alpha="0.70"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_outline_done_outline_16px" />



</RelativeLayout>