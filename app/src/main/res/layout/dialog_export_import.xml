<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    android:paddingTop="32dp"
    android:scrollbars="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minWidth="170dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/export_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.7"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_file_export_black_24dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/dialog_export_import_export"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/import_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.7"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_file_import_black_24dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/dialog_export_import_import"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/sync_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.7"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_cached_black_24dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/dialog_export_import_sync"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.7"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_action_help_black_24"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/action_help"
            android:textColor="@android:color/black" />

    </LinearLayout>

</ScrollView>