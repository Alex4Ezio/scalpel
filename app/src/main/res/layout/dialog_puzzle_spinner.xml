<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outline_background_card_top"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/BottomPanelListTextStyle"
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_outline_category_24"
        android:paddingRight="22dp"
        android:paddingBottom="16dp"
        android:text="Select a puzzle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black_divider"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
