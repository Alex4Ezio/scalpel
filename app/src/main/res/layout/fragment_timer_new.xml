<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:keepScreenOn="true"
    app:umanoPanelHeight="0dp"
    app:umanoScrollableView="@+id/scrollPanel"
    app:umanoShadowHeight="4dp">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?mainColorBackground"
        tools:context="com.aricneto.twistytimer.fragment.TimerFragment">

        <include
            android:id="@+id/main_actionbar"
            layout="@layout/main_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="42.35"
            android:textColor="#000"
            android:textSize="58sp" />

        <TextView
            android:id="@+id/stat_averages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/timer"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/timer"
            android:alpha=".85"
            android:fontFamily="@font/quicksand_medium"
            android:text="Ao5: 14.23\nAo12: 12.35\nAo50: 13.95"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stat_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/timer"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/timer"
            android:alpha=".85"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="right"
            android:text="Dev: 4.42\nBest: 6.35\nWorst: 24.63"
            android:textColor="#000"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/md_white_1000"
            app:cardCornerRadius="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/qa_remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha=".85"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_outline_delete_24px" />

                <ImageView
                    android:id="@+id/qa_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha=".85"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_outline_add_comment_24px" />

                <ImageView
                    android:id="@+id/qa_flag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha=".85"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_outline_flag_24px" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/scrambleImg"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitStart"
            tools:background="@color/red_material" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_margin="16dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:mpb_progressStyle="circular"
            tools:visibility="visible" />

        <include
            android:id="@+id/main_nav"
            layout="@layout/main_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <!-- Scramble text view -->

    <ScrollView
        android:id="@id/scrollPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_18dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/panel_swipe_down_to_hide"
                android:textStyle="bold" />

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/panelSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                app:mpb_progressStyle="circular" />

            <TextView
                android:id="@+id/panelSpinnerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/loading_hints"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/panelText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:padding="16dp"
                android:text=""
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
