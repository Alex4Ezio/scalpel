<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:background="#001100">

    <RelativeLayout
        android:id="@+id/puzzleSpinner"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/puzzleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Puzzle"
            android:textColor="?colorTimerText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/puzzleCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/puzzleName"
            android:alpha=".85"
            android:fontFamily="@font/quicksand"
            android:text="Category"
            android:textColor="?colorTimerText"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/puzzleName"
            android:alpha="0.90"
            android:tint="?colorTimerText"
            app:srcCompat="@drawable/ic_outline_arrow_drop_down_24px" />

    </RelativeLayout>



    <ImageView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0.90"
        android:padding="8dp"
        android:tint="?colorTimerText"
        app:srcCompat="@drawable/ic_outline_category_24" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/category"
        android:alpha="0.90"
        android:padding="8dp"
        android:tint="?colorTimerText"
        app:srcCompat="@drawable/ic_outline_hourglass_empty_24px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:alpha="0.90"
        android:padding="8dp"
        android:tint="?colorTimerText"
        app:srcCompat="@drawable/ic_outline_settings_24px" />

</RelativeLayout>
