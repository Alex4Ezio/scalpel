<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?mainColorBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/puzzleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:fontFamily="@font/quicksand_bold"
        android:text="3x3 Cube"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/puzzleCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puzzleName"
        android:layout_centerHorizontal="true"
        android:alpha=".85"
        android:fontFamily="@font/quicksand"
        android:text="one-handed"
        android:textColor="#000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/puzzleCategory"
        android:alpha="0.85"
        app:srcCompat="@drawable/ic_outline_arrow_drop_down_24px" />

    <ImageView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:alpha="0.85"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_outline_category_24" />

    <ImageView
        android:id="@+id/scramble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/category"
        android:alpha="0.85"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_outline_cached_24px" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:alpha="0.85"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_outline_settings_24px" />

</RelativeLayout>
