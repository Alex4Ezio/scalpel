<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="#fff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/qa_remove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha=".85"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_outline_view_stream_24px" />

    <ImageView
        android:id="@+id/qa_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha=".85"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_outline_timer_24px" />

    <ImageView
        android:id="@+id/qa_flag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha=".85"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_outline_timeline_24px" />

</LinearLayout>
