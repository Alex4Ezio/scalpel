<resources>

    <!--
    "DefaultTheme" may be defined differently in "values/styles.xml".
    -->
    <style name="DefaultTheme" parent="BaseDefaultTheme">
        <item name="android:statusBarColor">#0CFFDB</item>
    </style>

    <!--
    Extensions to the "Base<Color>Theme" styles for the v21 styles. They are defined differently
    in "values/styles.xml".
    -->
    <style name="PinkTheme" parent="BasePinkTheme">
        <item name="android:statusBarColor">@color/md_pink_700</item>
    </style>

    <style name="PurpleTheme" parent="BasePurpleTheme">
        <item name="android:statusBarColor">@color/md_purple_700</item>
    </style>

    <style name="LightBlueTheme" parent="BaseLightBlueTheme">
        <item name="android:statusBarColor">@color/md_light_blue_700</item>
    </style>

    <style name="LightGreenTheme" parent="BaseLightGreenTheme">
        <item name="android:statusBarColor">@color/md_light_green_700</item>
    </style>

    <style name="CyanTheme" parent="BaseCyanTheme">
        <item name="android:statusBarColor">@color/md_cyan_700</item>
    </style>

    <style name="TealTheme" parent="BaseTealTheme">
        <item name="android:statusBarColor">@color/md_teal_700</item>
    </style>

    <style name="RedTheme" parent="BaseRedTheme">
        <item name="android:statusBarColor">@color/md_red_700</item>
    </style>

    <style name="BrownTheme" parent="BaseBrownTheme">
        <item name="android:statusBarColor">@color/md_brown_700</item>
    </style>

    <style name="BlueTheme" parent="BaseBlueTheme">
        <item name="android:statusBarColor">@color/md_blue_700</item>
    </style>

    <style name="BlackTheme" parent="BaseBlackTheme">
        <item name="android:statusBarColor">@color/md_black_1000</item>
    </style>

    <style name="GreenTheme" parent="BaseGreenTheme">
        <item name="android:statusBarColor">@color/md_green_700</item>
    </style>

    <style name="OrangeTheme" parent="BaseOrangeTheme">
        <item name="android:statusBarColor">@color/md_deep_orange_700</item>
    </style>

    <style name="DeepPurpleTheme" parent="BaseDeepPurpleTheme">
        <item name="android:statusBarColor">@color/md_deep_purple_700</item>
    </style>

    <style name="BlueGrayTheme" parent="BaseBlueGrayTheme">
        <item name="android:statusBarColor">@color/md_blue_grey_700</item>
    </style>

    <!--
    Other miscellaneous styles.
    -->
    <style name="ToolBarStyle" parent="BaseToolBarStyle">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="ToolBarStyle.NoElevation">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Tarefa.Header.Spinner" parent="Base.Widget.Tarefa.Header.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>
